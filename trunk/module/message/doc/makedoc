makeinfo --html --no-split --number-sections --css-include=../../doc/style.css nb_message.texi
makeinfo --plaintext --no-split --number-sections --output=nb_message.txt nb_message.texi
makeinfo --docbook --no-split --number-sections --output=nb_message_DocBook.xml nb_message.texi
makeinfo --xml --no-split --number-sections nb_message.texi
makeinfo --no-split --number-sections nb_message.texi
texi2pdf -D -V -o nb_message.pdf nb_message.texi

