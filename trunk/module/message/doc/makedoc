makeinfo --html --no-split --number-sections nb_message.texi
makeinfo --plaintext --no-split --number-sections --output=nb_message.txt nb_message.texi
makeinfo --docbook --no-split --number-sections --output=nb_messageDocBook.xml nb_message.texi
makeinfo --xml --no-split --number-sections nb_message.texi
makeinfo --no-split --number-sections nb_message.texi

./texi4pdf nb_message.texi > nb_message.texi4pdf
texi2pdf -D -V -o nb_message.pdf nb_message.texi4pdf

